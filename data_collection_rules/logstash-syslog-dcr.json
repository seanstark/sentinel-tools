{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataCollectionRuleName": {
            "type": "String",
            "metadata": {
                "description": "Specify the name of the Data Collection Rule to create."
            }
        },
        "location": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "Specify the location in which to create the Data Collection Rule."
            }
        },
        "workspaceResourceId": {
            "type": "String",
            "metadata": {
                "description": "Specify the Azure resource ID of the Log Analytics workspace to use."
            }
        },
        "endpointResourceId": {
            "type": "String",
            "metadata": {
                "description": "Specify the Azure resource ID of the Data Collection Endpoint to use."
            }
        },
        "transformKql": {
            "defaultValue": "source | project TimeGenerated = ls_timestamp, EventTime = todatetime(timestamp), Computer = logsource, HostName = logsource, HostIP = host, SyslogMessage = message, Facility = facility_label, SeverityLevel = severity_label",
            "type": "String",
            "metadata": {
                "description": "The KQL statement to transform the data on ingest. The TimeGenerated datetime field is required"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Insights/dataCollectionRules",
            "apiVersion": "2021-09-01-preview",
            "name": "[parameters('dataCollectionRuleName')]",
            "location": "[parameters('location')]",
            "properties": {
                "dataCollectionEndpointId": "[parameters('endpointResourceId')]",
                "streamDeclarations": {
                    "Custom-Microsoft-Syslog": {
                        "columns": [
                            {
                                "name": "TimeGenerated",
                                "type": "datetime"
                            },
                            {
                                "name": "RawData",
                                "type": "string"
                            },
							{
								"name": "ls_timestamp",
								"type": "datetime"
							},
							{
								"name": "timestamp",
								"type": "datetime"
							},
							{
								"name": "message",
								"type": "string"
							},
							{
								"name": "facility_label",
								"type": "string"
							},
							{
								"name": "severity_label",
								"type": "string"
							},
							{
								"name": "host",
								"type": "string"
							},
							{
								"name": "logsource",
								"type": "string"
							}
						]
					}
                },
                "destinations": {
                    "logAnalytics": [
                        {
                            "workspaceResourceId": "[parameters('workspaceResourceId')]",
                            "name": "Custom-Microsoft-Syslog-Workspace"
                        }
                    ]
                },
                "dataFlows": [
                    {
                        "streams": [
                            "Custom-Microsoft-Syslog"
                        ],
                        "destinations": [
                            "Custom-Microsoft-Syslog-Workspace"
                        ],
                        "transformKql": "[parameters('transformKql')]",
                        "outputStream": "Microsoft-Syslog"
                    }
                ]
            }
        }
    ],
    "outputs": {
        "dataCollectionRuleId": {
            "type": "String",
            "value": "[resourceId('Microsoft.Insights/dataCollectionRules', parameters('dataCollectionRuleName'))]"
        }
    }
}